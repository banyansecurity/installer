{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "restapiserver",
    "labels": {
      "app": "restapiserver"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "restapiserver"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "restapiserver",
          "uses": "dbhost"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "restapiserver",
            "image": "reg.banyanops.com/banyanops/restapiserver",
            "ports": [
              {
                "hostPort": 9001,
                "containerPort": 9001
              }
            ],
            "env": [
              {
                 "name": "dbhost",
                 "value": "dbhost"
              }
            ],
            "volumeMounts": [
              {
                  "mountPath": "/banyanlog",
                  "name": "banyanlog"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "100m"
              }
            }
          }
        ],
        "volumes": [
            {
                "awsElasticBlockStore": {
                    "fsType": "ext4",
                    "volumeID": "aws://us-west-2a/vol-89563f48"
                },
                "name": "banyanlog"
            }
        ]
      }
    }
  }
}
